<div class="container">
    <div class="row">
        <div class="col-12" id="top-bar">
            <h1>-BRGRS-</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-6" class=" task1">
            <h2>Burgers</h2>
            <ol id="enjoy">
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}

                    <button class="change-devoured" data-id="{{id}}" data-newdevoured=true>
                        {{#if devoured}}Test{{else}}Enjoy!{{/if}}
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-6" class="task2">
            <h2>Devoured</h2>
            <ol id="devoured">
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center enter_section">
            <h2>Create Your Own Delicious Burger!</h2>
            <form class="burger-form">

                <div class="form-group">
                    <label for="brg">Burger Name:</label>
                    <input type="text" id="brg" name="burger_name">
                </div>

                <div class="form-group" id="radio">
                    <label for="devoured">Availability:</label><br>
                    <input type="radio" name="devoured" value="1" checked> Devoured<br>
                    <input type="radio" name="devoured" value="0"> Freshly Made
                </div>

                <button class="burger-form" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>